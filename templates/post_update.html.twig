{% extends 'base.html.twig' %}
{% block content %}

    <div class="container">
        <div class="d-flex flex-row  mb-3">
            <div>
                <a class="btn" href="index.php">
                    <h3>Posts</h3>
                </a>
            </div>
        </div>
        <form method="post">
            <div class="mb-3">
                <label class="form-label">Title</label>
                <input name="title" type="text" class="form-control" value="{{ post.getPostTitle() }}">
            </div>
            <div class="mb-3">
                <label class="form-label">Content</label>
                <input name="content" type="text" class="form-control" value="{{ post.getPostContent() }}">
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
{% endblock %}